<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939"
    tools:context=".Settings">


    <TextView
        android:id="@+id/txttitle"
        android:layout_width="371dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnclear"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/viewtitle"
        android:layout_width="204dp"
        android:layout_height="61dp"
        android:gravity="center"
        android:text="Version info 0.881"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="570dp" />

    <ListView
        android:id="@+id/lv_history"
        android:layout_width="380dp"
        android:layout_height="322dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/viewtitle"
        app:layout_constraintTop_toBottomOf="@+id/btnexport"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="15dp" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="189dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="Clear Hisotry"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="76dp" />

    <Button
        android:id="@+id/btnhistory"
        android:layout_width="189dp"
        android:layout_height="55dp"
        android:layout_marginTop="72dp"
        android:gravity="center"
        android:text="History"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/txttitle"
        tools:layout_editor_absoluteX="220dp" />

    <Button
        android:id="@+id/btnexitsetting"
        android:layout_width="132dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Exit"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/viewtitle"
        tools:layout_editor_absoluteX="139dp" />

    <Button
        android:id="@+id/btnimport"
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Import"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/btnclear"
        tools:layout_editor_absoluteX="68dp" />

    <Button
        android:id="@+id/btnexport"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Export"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/btnimport"
        app:layout_constraintTop_toBottomOf="@+id/btnhistory" />


</androidx.constraintlayout.widget.ConstraintLayout>