<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939"
    tools:context=".Settings">


    <Button
        android:id="@+id/btnexitsettings"
        android:layout_width="132dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Exit"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnhistory" />

    <TextView
        android:id="@+id/txttitle"
        android:layout_width="379dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnclear"
        app:layout_constraintEnd_toEndOf="@+id/btnclear"
        app:layout_constraintStart_toEndOf="@+id/btnclear"
        app:layout_constraintTop_toTopOf="@+id/btnhistory"
        app:layout_constraintVertical_bias="0.875" />

    <ListView
        android:id="@+id/lv_history"
        android:layout_width="0dp"
        android:layout_height="322dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toTopOf="@+id/btnexitsettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Clear Hisotry"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnimport"
        app:layout_constraintEnd_toStartOf="@+id/btnhistory"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnhistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="527dp"
        android:gravity="center"
        android:text="History"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnexitsettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnclear"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <Button
        android:id="@+id/btnimport"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Import"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/lv_history"
        app:layout_constraintEnd_toStartOf="@+id/btnexport"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnexport"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Export"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/lv_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnimport" />

    <Button
        android:id="@+id/btnaboutapp"
        android:layout_width="132dp"
        android:layout_height="61dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="about"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnexitsettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_history"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>